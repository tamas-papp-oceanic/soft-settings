{
  "name": "settings",
  "version": "1.0.0",
  "description": "Poseidon settings",
  "main": "main.js",
  "author": "Oceanic System's Development Team",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public --no-clear",
    "electron": "wait-on http://localhost:5000 && electron .",
    "electron-dev": "concurrently \"yarn run dev\" \"yarn run electron\"",
    "preelectron-pack": "yarn run build",
    "electron-pack": "electron-builder"
  },
  "build": {
    "icon": "public/favicon.png",
    "productName": "Svelte and Electron App",
    "files": [
      "public/**/*",
      "main.js",
      "preload.js"
    ],
    "linux": {
      "target": "appImage",
      "category": "Utility",
      "publish": {
        "provider": "generic",
        "url": "https://updates.osukl.com/leopard/release/x86_64"
      }
    },
    "mac": {},
    "win": {},
    "appImage": {
      "synopsis": "Poseidon Settings",
      "description": "Oceanic System's Poseidon Settings Application",
      "artifactName": "settings"
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.21",
    "carbon-components-svelte": "^0.89.2",
    "concurrently": "^6.5.1",
    "electron": "^19.1.9",
    "electron-is-dev": "^2.0.0",
    "mxgraph": "^4.2.2",
    "node-sass": "^6.0.1",
    "rollup": "^2.79.2",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "sirv-cli": "^1.0.14",
    "svelte-preprocess": "^4.7.3",
    "svelte-spa-router": "^3.1.0",
    "wait-on": "^8.0.3",
    "yarn": "^1.22.19"
  },
  "postinstall": "electron-builder install-app-deps"
}
